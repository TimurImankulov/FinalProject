<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto" android:id="@+id/main"
    app:startDestination="@id/mainFragment">

    <fragment
        android:id="@+id/mainFragment"
        android:name="com.example.onlinestore.ui.bottomnavigation.main.MainFragment"
        android:label="MainFragment" >
        <action
            android:id="@+id/action_mainFragment_to_productDetailsFragment"
            app:destination="@id/productDetailsFragment" />
        <action
            android:id="@+id/action_mainFragment_to_categoryFragment"
            app:destination="@id/categoryFragment" />
    </fragment>
    <fragment
        android:id="@+id/productDetailsFragment"
        android:name="com.example.onlinestore.ui.productsdetails.ProductDetailsFragment"
        android:label="ProductDetailsFragment" >
        <action
            android:id="@+id/action_productDetailsFragment_to_descriptionFragment"
            app:destination="@id/descriptionFragment" />
        <action
            android:id="@+id/action_productDetailsFragment_to_relatedProductDetailsFragment"
            app:destination="@id/relatedProductDetailsFragment" />
        <action
            android:id="@+id/action_productDetailsFragment_to_specificationFragment"
            app:destination="@id/specificationFragment" />
        <action
            android:id="@+id/action_productDetailsFragment_to_photoDetailsFragment"
            app:destination="@id/photoDetailsFragment" />
        <argument
            android:name="details"
            app:argType="com.example.onlinestore.data.test.ProductListModel"
            app:nullable="true" />
    </fragment>
    <fragment
        android:id="@+id/descriptionFragment"
        android:name="com.example.onlinestore.ui.productsdetails.DescriptionFragment"
        android:label="DescriptionFragment" >
        <argument
            android:name="details"
            app:argType="string"
            app:nullable="true" />
    </fragment>
    <fragment
        android:id="@+id/relatedProductDetailsFragment"
        android:name="com.example.onlinestore.ui.productsdetails.RelatedProductDetailsFragment"
        android:label="RelatedProductDetailsFragment" >
        <action
            android:id="@+id/action_relatedProductDetailsFragment_to_descriptionFragment"
            app:destination="@id/descriptionFragment" />
        <action
            android:id="@+id/action_relatedProductDetailsFragment_to_specificationFragment"
            app:destination="@id/specificationFragment" />
        <action
            android:id="@+id/action_relatedProductDetailsFragment_to_photoDetailsFragment"
            app:destination="@id/photoDetailsFragment" />
        <argument
            android:name="details"
            app:argType="com.example.onlinestore.data.test.RelatedProductModel"
            app:nullable="true"
            android:defaultValue="@null" />
    </fragment>
    <fragment
        android:id="@+id/specificationFragment"
        android:name="com.example.onlinestore.ui.productsdetails.SpecificationFragment"
        android:label="SpecificationFragment" >
        <argument
            android:name="details"
            app:argType="com.example.onlinestore.data.test.Specification[]"
            app:nullable="true"
            android:defaultValue="@null" />
    </fragment>
    <fragment
        android:id="@+id/photoDetailsFragment"
        android:name="com.example.onlinestore.ui.productsdetails.PhotoDetailsFragment"
        android:label="PhotoDetailsFragment" >
        <argument
            android:name="details"
            app:argType="com.example.onlinestore.data.test.Images"
            app:nullable="true" />
    </fragment>
    <fragment
        android:id="@+id/categoryFragment"
        android:name="com.example.onlinestore.ui.bottomnavigation.main.CategoryFragment"
        android:label="CategoryFragment" >
        <action
            android:id="@+id/action_categoryFragment_to_productDetailsFragment"
            app:destination="@id/productDetailsFragment" />
        <argument
            android:name="details"
            app:argType="com.example.onlinestore.data.test.ProductListModel[]"
            app:nullable="true"
            android:defaultValue="@null" />
        <argument
            android:name="data"
            app:argType="string"
            app:nullable="true" />
    </fragment>
</navigation>