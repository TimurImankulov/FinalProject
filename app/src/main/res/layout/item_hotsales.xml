<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:id="@+id/mainCard"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp172"
        android:clickable="true"
        android:focusable="true"
        android:layout_marginHorizontal="@dimen/dp20"
        app:cardCornerRadius="@dimen/dp15"
        tools:ignore="MissingConstraints">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/ivHotSales"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/iphone"
                android:scaleType="centerCrop" />

            <ImageView
                android:id="@+id/ivNew"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp24"
                android:layout_marginTop="@dimen/dp16"
                android:src="@drawable/ic_resource_new"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/tvTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp24"
                android:layout_marginTop="@dimen/dp18"
                android:fontFamily="@font/sf_pro_display_bold"
                android:text="Iphone 12"
                android:textColor="@color/white"
                android:textSize="@dimen/sp25"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/ivNew" />

            <TextView
                android:id="@+id/tvDescriptions"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp24"
                android:layout_marginTop="@dimen/dp4"
                android:fontFamily="@font/sf_pro_display_regular"
                android:text="Súper.Mega.Rápido."
                android:textSize="@dimen/sp11"
                android:textColor="@color/white"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tvTitle" />
            
            <Button
                android:id="@+id/btnBuyNow"
                android:layout_width="@dimen/dp98"
                android:layout_height="@dimen/dp24"
                android:text="Buy now!"
                android:background="@drawable/bg_button_buy"
                android:fontFamily="@font/sf_pro_display_bold"
                android:textColor="@color/darkBlue"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tvDescriptions"
                android:layout_marginLeft="@dimen/dp24"
                android:layout_marginTop="@dimen/dp20"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>