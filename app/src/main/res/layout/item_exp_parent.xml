<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/grey"
    android:padding="16dp">

    <androidx.cardview.widget.CardView
        android:id="@+id/expandable_ProductCard"
        android:layout_width="46dp"
        android:layout_height="46dp"
        app:cardCornerRadius="@dimen/dp12"
        app:cardElevation="@dimen/dp0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/iv_Product"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="@dimen/dp8"
                android:scaleType="centerCrop"
                android:src="@drawable/samsung" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/tv_Title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp16"
        android:layout_marginEnd="@dimen/dp20"
        android:fontFamily="@font/mark_pro_medium"
        android:text="vadfvsdvsdav"
        android:textColor="@color/darkBlue"
        android:textSize="@dimen/sp16"
        app:layout_constraintBottom_toBottomOf="@id/expandable_ProductCard"
        app:layout_constraintStart_toEndOf="@id/expandable_ProductCard"
        app:layout_constraintTop_toTopOf="@id/expandable_ProductCard" />

    <ImageView
        android:id="@+id/ivGroupIndicator"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/dp20"
        android:background="@drawable/group_indicator"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>