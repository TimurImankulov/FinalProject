<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/item_favorite"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clickable="true"
    android:focusable="true">

    <androidx.cardview.widget.CardView
        android:id="@+id/favorite_ProductCard"
        android:layout_width="@dimen/dp80"
        android:layout_height="@dimen/dp80"
        app:cardCornerRadius="@dimen/dp10"
        app:cardElevation="@dimen/dp0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/iv_Product"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="@dimen/dp8"
                android:scaleType="centerCrop"
                android:src="@drawable/samsung"
                app:layout_constraintTop_toTopOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/tv_Title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp16"
        android:layout_marginTop="@dimen/dp4"
        android:layout_marginEnd="@dimen/dp20"
        android:ellipsize="end"
        android:fontFamily="@font/mark_pro_medium"
        android:maxLines="2"
        android:text="Samsung Galaxy s20 Ultra dvsdvsdvsdvsdv"
        android:textColor="@color/darkBlue"
        android:textSize="@dimen/sp16"
        app:layout_constraintEnd_toStartOf="@id/ch_Favorites"
        app:layout_constraintStart_toEndOf="@id/favorite_ProductCard"
        app:layout_constraintTop_toTopOf="@id/favorite_ProductCard" />

    <TextView
        android:id="@+id/tv_Price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp16"
        android:layout_marginTop="@dimen/dp8"
        android:fontFamily="@font/mark_pro_bold"
        android:text="$1,047"
        android:textColor="@color/darkBlue"
        android:textSize="@dimen/sp16"
        app:layout_constraintStart_toEndOf="@id/favorite_ProductCard"
        app:layout_constraintTop_toBottomOf="@id/tv_Title" />

    <CheckBox
        android:id="@+id/ch_Favorites"
        android:layout_width="@dimen/dp25"
        android:layout_height="@dimen/dp25"
        android:layout_marginEnd="@dimen/dp12"
        android:background="@android:color/transparent"
        android:button="@drawable/bg_checkbox"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>