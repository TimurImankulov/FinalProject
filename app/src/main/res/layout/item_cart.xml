    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/transparent"
    android:padding="@dimen/dp8">

    <androidx.cardview.widget.CardView
        android:id="@+id/product_Card"
        android:layout_width="@dimen/dp80"
        android:layout_height="@dimen/dp80"
        android:layout_marginStart="@dimen/dp16"
        app:cardCornerRadius="@dimen/dp10"
        app:cardElevation="@dimen/dp0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/iv_Product"
                android:layout_width="@dimen/dp88"
                android:layout_height="@dimen/dp88"
                android:padding="@dimen/dp8"
                android:scaleType="centerCrop"
                android:src="@drawable/samsung"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/tv_ProductName"
        android:layout_width="@dimen/dp0"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp16"
        android:layout_marginEnd="@dimen/dp20"
        android:fontFamily="@font/mark_pro_medium"
        android:gravity="left"
        android:maxLines="2"
        android:text="Galaxy Note 20 \nUltra"
        android:textColor="@color/white"
        android:textSize="@dimen/sp20"
        app:layout_constraintEnd_toStartOf="@id/btn_Delete"
        app:layout_constraintStart_toEndOf="@id/product_Card"
        app:layout_constraintTop_toTopOf="@id/product_Card" />

    <TextView
        android:id="@+id/tv_ProductPrice"
        android:layout_width="@dimen/dp0"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp16"
        android:layout_marginEnd="@dimen/dp10"
        android:fontFamily="@font/mark_pro_medium"
        android:gravity="left"
        android:maxLines="1"
        android:text="$3000"
        android:textColor="@color/orange"
        android:textSize="@dimen/sp20"
        app:layout_constraintBottom_toBottomOf="@id/product_Card"
        app:layout_constraintEnd_toStartOf="@id/btn_Delete"
        app:layout_constraintStart_toEndOf="@id/product_Card" />

